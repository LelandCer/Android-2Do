<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/sky_blue</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/maroon</item>
    </style>

    <style name="paper_style">
        <item name="fontFamily">cursive</item>
    </style>


    <style name="header_style" parent="paper_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>